{
    "name": "acacha/llum",
    "description": "Llum (light in catalan language) illuminates your Laravel projects.",
    "keywords": ["laravel","scaffold","boilerplate"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergi Tur Badenas",
            "email": "sergiturbadenas@gmail.com"
        }
